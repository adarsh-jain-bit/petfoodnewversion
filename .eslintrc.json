{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "requireConfigFile": false,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true, // Enables `console` in frontend code
    "node": true,    // Enables `process`, `module`, etc.
    "es2021": true   // Enables modern JavaScript features
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "jsx-runtime": "automatic"
  },
  "plugins": ["react"],
    "rules": {
      "react/prop-types": "off"
    }

}
